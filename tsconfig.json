{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "types": [
            "vite-plugin-svgr/client"
        ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "moduleResolution": "Node",
            "allowJs": false,
            "esModuleInterop": true
        }
    },
    "include": [
      "./config/jest/setupTests.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "storybook-static/sb-preview/runtime.js",
    ],
}
